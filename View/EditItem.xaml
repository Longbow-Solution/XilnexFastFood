                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Upgrade to" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" Margin="30,0,0,0" FontWeight="{DynamicResource 700}" Foreground="#3D160E"/>
